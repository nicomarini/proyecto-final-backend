doctype html
html(lang='es')
    head
        meta(charset='UTF-8')
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css', integrity='sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l', crossorigin='anonymous')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        title=pageTitle
        script(src='https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/18.1.5/js/intlTelInput.min.js')
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css')
        link(rel='stylesheet', href='css/main.css')

    body
        div(class='container.mt-3')
            div.jumbotron
                b Sign Up
                hr
                form(onsubmit='return TelephoneCodes(event)', action='/signup', method='post', enctype='multipart/form-data')
                    div.d-flex
                        div.flex-fill(class='form-group')
                            input#name.form-control(type='text', name='name', placeholder='Nombre')
                        div.flex-fill(class='form-group')
                            input#lastName.form-control(type='text', name='lastName', placeholder='Apellido')
                        div.flex-fill(class='form-group')
                            input#address.form-control(type='text', name='address', placeholder='Direccion')
                    div.d-flex
                        div.flex-fill(class='form-group')
                            input#age.form-control(type='number', name='age', placeholder='Edad')
                        div.flex-fill(class='form-group')
                            input#photo.form-control(type='file', name='photo', placeholder='Foto')
                        div.flex-fill(class='form-group')
                            input#phone.form-control(name='phone' type='tel', placeholder='Cell')
                        div.flex-fill(class='form-group')
                            input#phoneNumber.form-control(type='hidden', name='phoneNumber')
                    div.d-flex
                        div.flex-fill(class='form-group')
                            input#username.form-control(type='text', name='username', placeholder='Correo')
                        div.flex-fill(class='form-group')
                            input#password.form-control(type='password', name='password', placeholder='Contrase√±a')
                        button Registrarse
    script(src='https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js' integrity='sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct' crossorigin='anonymous')
    script(src='../index.js')